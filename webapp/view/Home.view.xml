<mvc:View controllerName="com.total.demoHelloWorld.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:layout="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox>
						<HBox>
						<Label text="UserName"/>
						<Input value="{/InputValue}"/>
						</HBox>
						<HBox>
						<Label text="Password"/>
						<Input type="Password"/>
						</HBox>
						<Button text="Login" type="Accept" press="onGetDetails"/>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>